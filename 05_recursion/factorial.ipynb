    "def factorial_recursive(x):\n",
    "    ''' x! = x * (x-1)! '''\n",
    "    if x <= 1:\n",
    "        return 1\n",
    "    return x * factorial_recursive(x - 1)\n",
    "    \n",
    "    \n",
    "testcase = 5 # 5! = 120\n",
    "print(factorial_recursive(testcase))"
   ]
  }
